        </Grid.Background>
        <Label Content="Au club de tennis je trie" HorizontalAlignment="Left" Margin="206,29,0,0" VerticalAlignment="Top" Height="62" Width="387" Foreground="White" FontSize="36"/>
        <Image HorizontalAlignment="Left" Height="109" Margin="10,109,0,0" VerticalAlignment="Top" Width="288" Source="Tri-Balles.jpg"/>
        <TextBlock x:Name="triballe" HorizontalAlignment="Left" Margin="10,252,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="145" Width="288" Foreground="White"/>
        <TextBlock x:Name="triselectif" HorizontalAlignment="Left" Margin="403,118,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="100" Width="380" Foreground="White"/>
        <Image HorizontalAlignment="Left" Height="158" Margin="403,239,0,0" VerticalAlignment="Top" Width="369" Source="Tri-selectif.jpg"/>
        <Button Content="Precedent" HorizontalAlignment="Left" Margin="686,34,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.5,0.5" Background="#FFFDFF00" FontFamily="Segoe UI Black" Click="Precedent"/>

    </Grid>
